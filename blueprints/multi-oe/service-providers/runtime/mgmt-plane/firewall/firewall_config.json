{
    "instances_configuration": {
        "default_compartment_id"                           : "SHARED-NETWORK-CMP",
        "default_ssh_public_key_path"                      : "ssh-rsa AAAAB3NzaC1......RgQ== user@example.com",

        "instances": {
            "PANF-1": {
                "name"                                     : "panf-1",
                "shape"                                    : "VM.Standard3.Flex",

                "boot_volume": {
                    "measured_boot"                        : true,
                    "preserve_on_instance_deletion"        : true,
                    "size"                                 : 100
                },

                "encryption": {
                    "encrypt_in_transit_on_instance_create": null,
                    "encrypt_in_transit_on_instance_update": null
                },

                "flex_shape_settings": {
                    "memory_in_gbs"                        : 16,
                    "ocpus"                                : 4
                },

                "marketplace_image": {
                    "name"                                 : "Palo Alto Networks VM-Series Next Generation Firewall"
                },

                "networking": {
                    "network_security_groups"              : ["MGMT-NSG"],
                    "hostname"                             : "panf-1",
                    "subnet_id"                            : "MGMT-SUB",

                    "secondary_vnics": {
                        "INDOOR": {
                            "display_name"                 : "panf-1-indoor",
                            "network_security_groups"      : ["INDOOR-FW-NSG"],
                            "hostname"                     : "panf-1-indoor",
                            "skip_source_dest_check"       : true,
                            "subnet_id"                    : "INDOOR-SUB"
                        },

                        "OUTDOOR": {
                            "display_name"                 : "panf-1-outdoor",
                            "network_security_groups"      : ["OUTDOOR-FW-NSG"],
                            "hostname"                     : "panf-1-outdoor",
                            "skip_source_dest_check"       : true,
                            "subnet_id"                    : "OUTDOOR-SUB"
                        }
                    }
                },

                "placement": {
                    "availability_domain"                  : 1,
                    "fault_domain"                         : 1
                }
            },

            "PANF-2": {
                "name"                                     : "panf-2",
                "shape"                                    : "VM.Standard3.Flex",

                "boot_volume": {
                    "measured_boot"                        : true,
                    "preserve_on_instance_deletion"        : true,
                    "size"                                 : 100
                },

                "encryption": {
                    "encrypt_in_transit_on_instance_create": null,
                    "encrypt_in_transit_on_instance_update": null
                },

                "flex_shape_settings": {
                    "memory_in_gbs"                        : 16,
                    "ocpus"                                : 4
                },

                "marketplace_image": {
                    "name"                                 : "Palo Alto Networks VM-Series Next Generation Firewall"
                },

                "networking": {
                    "network_security_groups"              : ["MGMT-NSG"],
                    "hostname"                             : "panf-2",
                    "subnet_id"                            : "MGMT-SUB",

                    "secondary_vnics": {
                        "INDOOR": {
                            "display_name"                 : "panf-2-indoor",
                            "network_security_groups"      : ["INDOOR-FW-NSG"],
                            "hostname"                     : "panf-2-indoor",
                            "skip_source_dest_check"       : true,
                            "subnet_id"                    : "INDOOR-SUB"
                        },

                        "OUTDOOR": {
                            "display_name"                 : "panf-2-outdoor",
                            "network_security_groups"      : ["OUTDOOR-FW-NSG"],
                            "hostname"                     : "panf-2-outdoor",
                            "skip_source_dest_check"       : true,
                            "subnet_id"                    : "OUTDOOR-SUB"
                        }
                    }
                },

                "placement": {
                    "availability_domain"                  : 2,
                    "fault_domain"                         : 1
                }
            }
        }
    },

    "nlb_configuration": {
        "default_compartment_id"                           : "SHARED-NETWORK-CMP",

        "nlbs": {
            "INDOOR-NLB": {
                "display_name"                             : "isv-indoor-nlb",
                "enable_symmetric_hashing"                 : true,
                "is_private"                               : true,
                "network_security_group_ids"               : ["INDOOR-NLB-NSG"],
                "subnet_id"                                : "INDOOR-SUB",

                "listeners": {
                    "LISTENER-1": {
                        "protocol"                         : "ANY",
                        "port"                             : 0,

                        "backend_set": {
                            "name"                         : "default-backend-set",

                            "backends": {
                                "BACKEND-1": {
                                    "name"                 : "backend-1",
                                    "port"                 : 0,
                                    "ip_address"           : "PANF-1.INDOOR"
                                },

                                "BACKEND-2": {
                                    "name"                 : "backend-2",
                                    "port"                 : 0,
                                    "ip_address"           : "PANF-2.INDOOR"
                                }
                            },

                            "health_checker": {
                                "protocol"                 : "TCP",
                                "port"                     : 22
                            }
                        }
                    }
                }
            },

            "OUTDOOR-NLB": {
                "display_name"                             : "isv-outdoor-nlb",
                "is_private"                               : true,
                "network_security_group_ids"               : ["OUTDOOR-NLB-NSG"],
                "subnet_id"                                : "OUTDOOR-SUB",

                "listeners": {
                    "LISTENER-1": {
                        "protocol"                         : "ANY",
                        "port"                             : 0,

                        "backend_set": {
                            "name"                         : "default-backend-set",

                            "backends": {
                                "BACKEND-1": {
                                    "name"                 : "backend-1",
                                    "port"                 : 0,
                                    "ip_address"           : "PANF-1.OUTDOOR"
                                },

                                "BACKEND-2": {
                                    "name"                 : "backend-2",
                                    "port"                 : 0,
                                    "ip_address"           : "PANF-2.OUTDOOR"
                                }
                            },

                            "health_checker": {
                                "protocol"                 : "TCP",
                                "port"                     : 22
                            }
                        }
                    }
                }
            }
        }
    }
}
