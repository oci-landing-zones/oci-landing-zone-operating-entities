{
    "instances_configuration" : {
      "default_compartment_id" : "SHARED-NETWORK-CMP",
      "default_ssh_public_key_path" : "ssh-rsa  user@example.com",
      "instances" : {
        "OKE-OPERATOR-HOST" : {
          "name" : "oke-operator-host",
          "shape" : "VM.Standard.E4.Flex",
          "platform_image" : {
            "name" : "Oracle-Linux-Cloud-Developer-8.10-2025.01.31-0"
          },
          "boot_volume" : {
            "size" : 60,
            "preserve_on_instance_deletion" : false
          },
          "networking" : {
            "assign_public_ip" : false,
            "hostname " : "dev-oke-operator-host",
            "subnet_id" : "DEV-MGMT-VCN-APP-OPERATOR-SUB"
          },
          "encryption" : {
            "encrypt_in_transit_on_instance_create" : null,
            "encrypt_in_transit_on_instance_update" : null
          },
          "cloud_agent" : {
            "disable_monitoring" : false,
            "disable_management" : false,
            "plugins" : [
              {"name" : "Vulnerability Scanning", "enabled" : true},
              {"name" : "OS Management Service Agent", "enabled" : true},
              {"name" : "Custom Logs Monitoring", "enabled" : true}
            ]
          },
          "cloud_init" : {
            "heredoc_script" : "<<-EOT
              #cloud-config
              write_files:
                - path: /etc/oke_operator_setup.conf
                  permissions: '0644'
                  owner: root:root
                  content: |
                    KUBECTL_VERSION=v1.34.1
                    ANSIBLE_VERSION=2.9.7
              runcmd:
                - [ bash, -c, "curl -s https://raw.githubusercontent.com/oci-landing-zones/oci-landing-zone-operating-entities/refs/heads/multi-tenant-pattern/blueprints/multi-oe/service-providers/runtime/mt/shared/oke_operator_setup.sh -o /home/opc/oke_operator_setup.sh" ]
                - [ bash, -c, "chmod +x /home/opc/oke_operator_setup.sh" ]
                - [ sudo, -u, opc, /home/opc/oke_operator_setup.sh" ]
            EOT"
          }
        }
      }
    }
  }
  
  
  