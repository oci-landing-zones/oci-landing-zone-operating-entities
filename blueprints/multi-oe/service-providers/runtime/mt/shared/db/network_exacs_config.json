{
    "network_configuration" : {
      "default_enable_cis_checks" : true,
      "default_compartment_id" : "SHARED-DB-CMP",
      "network_configuration_categories" : {
        "production" : {
          "vcns" : {
            "EXA-VCN" : {
              "display_name"                     : "exacs-shared-vcn",
              "is_ipv6enabled"                   : false,
              "is_oracle_gua_allocation_enabled" : false,
              "cidr_blocks"                      : ["172.16.0.0/24"],
              "dns_label"                        : "exacsprodvcn",
              "block_nat_traffic"                : false,
  
              "subnets" : {
                "CLIENT-SUBNET" : {
                  "cidr_block"                 : "172.16.0.0/25",
                  "dhcp_options_key"           : "default_dhcp_options",
                  "display_name"               : "client-subnet",
                  "dns_label"                  : "client",
                  "ipv6cidr_blocks"            : [],
                  "prohibit_internet_ingress"  : true,
                  "route_table_key"            : "EXA-VCN-ROUTE",
                  "security_list_keys"         : ["EXA-VCN-CLIENT-SUBNET-SL"]
                },
                "BACKUP-SUBNET" : {
                  "cidr_block"                 : "172.16.0.128/26",
                  "dhcp_options_key"           : "default_dhcp_options",
                  "display_name"               : "backup-subnet",
                  "dns_label"                  : "backup",
                  "ipv6cidr_blocks"            : [],
                  "prohibit_internet_ingress"  : true,
                  "route_table_key"            : "BACKUP-SUBNET-ROUTE"
                }
              },
  
              "route_tables" : {
                "EXA-VCN-ROUTE" : {
                  "display_name" : "exacs-shared-vcn-route-table",
                  "route_rules" : {
                    "DRG-RULE" : {
                      "network_entity_key" : "CENTRAL-HUB-DRG",
                      "description"        : "All traffic goes to DRG.",
                      "destination"        : "0.0.0.0/0",
                      "destination_type"   : "CIDR_BLOCK"
                    }
                  }
                }
              },

              "security_lists" : {
                "EXA-VCN-CLIENT-SUBNET-SL" : {
                  "display_name" : "exacs-shared-vcn-security-list",
                  "ingress_rules" : [
                    {
                      "description"  : "Allows SSH connections from hosts in Exadata client subnet.",
                      "stateless"    : false,
                      "protocol"     : "TCP",
                      "src"          : "172.16.0.0/25",
                      "src_type"     : "CIDR_BLOCK",
                      "dst_port_min" : 22,
                      "dst_port_max" : 22
                    }
                  ],
                  "egress_rules" : [
                    {
                      "description"  : "Allows SSH connections to hosts in Exadata client subnet.",
                      "stateless"    : false,
                      "protocol"     : "TCP",
                      "dst"          : "172.16.0.0/25",
                      "dst_type"     : "CIDR_BLOCK",
                      "dst_port_min" : 22,
                      "dst_port_max" : 22
                    },
                    {
                      "description" : "Allows the initiation of ICMP connections to hosts in Exadata VCN.",
                      "stateless"   : false,
                      "protocol"    : "ICMP",
                      "dst"         : "172.16.0.0/25",
                      "dst_type"    : "CIDR_BLOCK",
                      "icmp_type"   : 3,
                      "icmp_code"   : 4
                    }
                  ]
                }
              },
  
              "network_security_groups" : {
                "EXA-VCN-CLIENT-NSG" : {
                  "display_name" : "exacs-shared-vcn-client-nsg",
                  "ingress_rules" : {
                    "INGRESS-FROM-CENTRAL-HUB-VCN-BASTION-SUBNET-RULE" : {
                      "description"  : "Ingress from jump hosts in Central Hub VCN's Bastion subnet.",
                      "stateless"    : false,
                      "protocol"     : "TCP",
                      "src"          : "192.168.0.32/29",
                      "src_type"     : "CIDR_BLOCK",
                      "dst_port_min" : 22,
                      "dst_port_max" : 22
                    },
                    "INGRESS-FROM-SSH-CLIENT-RULE" : {
                      "description"  : "Allows SSH connections from hosts in Client NSG.",
                      "stateless"    : false,
                      "protocol"     : "TCP",
                      "src"          : "EXA-VCN-CLIENT-NSG",
                      "src_type"     : "NETWORK_SECURITY_GROUP",
                      "dst_port_min" : 22,
                      "dst_port_max" : 22
                    },
                    "INGRESS-FROM-SQLNET-CLIENT-RULE" : {
                      "description"  : "Allows SQLNet connections from hosts in Client NSG.",
                      "stateless"    : false,
                      "protocol"     : "TCP",
                      "src"          : "EXA-VCN-CLIENT-NSG",
                      "src_type"     : "NETWORK_SECURITY_GROUP",
                      "dst_port_min" : 1521,
                      "dst_port_max" : 1522
                    },
                    "INGRESS-FROM-ONS-CLIENT-RULE" : {
                      "description"  : "Allows Oracle Notification Services (ONS) communication from hosts in Client NSG for Fast Application Notifications (FAN).",
                      "stateless"    : false,
                      "protocol"     : "TCP",
                      "src"          : "EXA-VCN-CLIENT-NSG",
                      "src_type"     : "NETWORK_SECURITY_GROUP",
                      "dst_port_min" : 6200,
                      "dst_port_max" : 6200
                    }
                  },
                  "egress_rules" : {
                    "EGRESS-TO-SSH-RULE" : {
                      "description" : "Allows SSH connections to hosts in Client NSG.",
                      "stateless"   : false,
                      "protocol"    : "TCP",
                      "dst"         : "EXA-VCN-CLIENT-NSG",
                      "dst_type"    : "NETWORK_SECURITY_GROUP",
                      "dst_port_min": 22,
                      "dst_port_max": 22
                    },
                    "EGRESS-TO-SQLNET-RULE" : {
                      "description" : "Allows SQLNet connections to hosts in Client NSG.",
                      "stateless"   : false,
                      "protocol"    : "TCP",
                      "dst"         : "EXA-VCN-CLIENT-NSG",
                      "dst_type"    : "NETWORK_SECURITY_GROUP",
                      "dst_port_min": 1521,
                      "dst_port_max": 1522
                    },
                    "EGRESS-TO-ONS-RULE" : {
                      "description" : "Allows Oracle Notification Services (ONS) communication to hosts in Client NSG for Fast Application Notifications (FAN).",
                      "stateless"   : false,
                      "protocol"    : "TCP",
                      "dst"         : "EXA-VCN-CLIENT-NSG",
                      "dst_type"    : "NETWORK_SECURITY_GROUP",
                      "dst_port_min": 6200,
                      "dst_port_max": 6200
                    },
                    "EGRESS-TO-OSN-RULE" : {
                      "description" : "Allows HTTPS connections to Oracle Services Network (OSN).",
                      "stateless"   : false,
                      "protocol"    : "TCP",
                      "dst"         : "all-services",
                      "dst_type"    : "SERVICE_CIDR_BLOCK",
                      "dst_port_min": 443,
                      "dst_port_max": 443
                    }
                  }
                },
                "EXA-VCN-BACKUP-NSG" : {
                  "display_name" : "exacs-shared-vcn-backup-nsg",
                  "EGRESS-TO-OSN-RULE" : {
                      "description" : "Allows HTTPS connections to Oracle Services Network (OSN).",
                      "stateless"   : false,
                      "protocol"    : "TCP",
                      "dst"         : "objectstorage",
                      "dst_type"    : "SERVICE_CIDR_BLOCK",
                      "dst_port_min": 443,
                      "dst_port_max": 443
                    }
                }
              }
            }
          },
  
          "non_vcn_specific_gateways" : {
            "inject_into_existing_drgs" : {
              "EXA-CENTRAL-HUB-DRG-INJECT" : {
                "drg_id" : "CENTRAL-HUB-DRG",
                "drg_attachments" : {
                  "EXA-VCN-ATTACH" : {
                    "display_name" : "exacs-shared-vcn-attachment",
                    "drg_route_table_key" : "EXA-VCN-DRG-ROUTE",
                    "network_details" : {
                      "attached_resource_key" : "EXA-VCN",
                      "type" : "VCN"
                    }
                  }
                },
                "drg_route_tables" : {
                  "EXA-VCN-DRG-ROUTE" : { 
                    "display_name" : "exacs-shared-vcn-drg-route-table",
                    "import_drg_route_distribution_key" : "EXA-VCN-IMPORT-ROUTE-DISTRIBUTION"
                  }
                },
                "drg_route_distributions" : {
                  "EXA-VCN-IMPORT-ROUTE-DISTRIBUTION" : {
                    "display_name" : "exacs-shared-vcn-route-distribution",
                    "distribution_type" : "IMPORT",
                    "statements" : {
                      "EXA-VCN-TO-CENTRAL-HUB-VCN-STMT" : {
                        "action" : "ACCEPT",
                        "priority" : 1,
                        "match_criteria" : {
                          "match_type" : "DRG_ATTACHMENT_ID",
                          "attachment_type" : "VCN",
                          "drg_attachment_key" : "CENTRAL-HUB-VCN-ATTACH"
                        }
                      }
                    }  
                }
              }
            }
          }
        }
      }
    }  
  }  
}